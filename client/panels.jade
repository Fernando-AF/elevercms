        +course_overview(id="id" cname="Química" professor="Edgar López Mena" email="edgar@itesm.mx" assistant="David Gerardo Guevara C." assistantEmail="dg@altusforge.com" permissions="Edit Content" term="3er. Semestre" department="Ciencias Básicas" licences="150" active="145" leftover="5")

template(name="course_overview")
    .over_header
        .over_block
            h4 Course ID
            p#titled {{id}}
        .over_block
            h4 Course Name
            p#titled {{cname}}
    .over_label
        .over_block
            h3 Members
    .over_row
        .over_block
            h5 Assigned Professor
            p {{professor}}
        .over_block
            h5 Signed as
            p {{email}}
        .over_block
            h5 Assistant
            p {{assistant}}
        .over_block
            h5 Signed as
            p {{assistantEmail}}
        .over_block
            h5 Permissions
            p {{permissions}}
    .over_label
        .over_block
            h3 Attendants
    .over_row
        .over_block
            h5 Term
            p {{term}}
        .over_block
            h5 Department
            p {{department}}
        .over_block
            h5 Available licences
            p {{licences}}
        .over_block
            h5 Activated licences
            p {{active}}
        .over_block
            h5 Leftover licences
            p {{leftover}}

template(name="group_information")
    .ib_header
        .ibh_title_group
            i.fa.fa-users
            h3 {{title}}
        .ibh_button_group
                h4 Assigned Groups
                .ibh_mark
                    h5 {{active}}
                i.fa.fa-angle-up#toggle
                i.fa.fa-info-circle
