template(name="mainpanels")
    .panelwrapper
        .sidepanel
            .title
                h5 
                  i.fa.fa-tachometer 
                  span.underline DASHBOARD

            +sidemenuItem
            
            +sidemenuItem

            .sidemenuItem#Teams
                h5
                    i.fa.fa-users 
                    | VIEW TEAMS
        .mainPanel
            .mainTitle
                .head
                    h1 Dashboard
                        i.fa.fa-circle-o-notch.fa-spin
                    p#update Last Update: Today at 13:20
                .holder
                    h3#current Current week number
                    h2 07 of 10
            .subTitle
                .sub
                    h3 Welcome Edgar Lopez!
            .contentwrapper
                .information
                    +course_information(title="Course(s) Information")
                .information
                    +group_information(title="Group(s) Information" active="2")
                .information
                    .ib_header
                        .ibh_title_group
                            i.fa.fa-check-square-o
                            h3 Recent Activities
                        .ibh_buttons
                            i.fa.fa-angle-down
                            i.fa.fa-info-circle

template(name="sidemenuItem")
    .sidemenuItem
        h5
            i.fa.fa-file-o 
            | COURSES
            span.ccount {{Qcourses}}
            // loop for each course in db //
        +course

        +course


template(name="course")
    .course
        h5
            span.chig FM
            | {{coursename}}   
            .fa.fa-angle-left

template(name="course_information")
    .ib_header
        .ibh_title
            i.fa.fa-files-o
            h3 {{title}}
        .ibh_buttons
                i.fa.fa-angle-up#toggle
                i.fa.fa-info-circle
    .infoContent
        +course_overview(id="id" cname="Física" professor="Edgar López Mena" email="edgar@itesm.mx" assistant="David Gerardo Guevara C." assistantEmail="dg@altusforge.com" permissions="Edit Content" term="1er. Semestre" department="Ciencias Básicas" licences="200" active="186" leftover="14")

        +course_overview(id="id" cname="Química" professor="Edgar López Mena" email="edgar@itesm.mx" assistant="David Gerardo Guevara C." assistantEmail="dg@altusforge.com" permissions="Edit Content" term="3er. Semestre" department="Ciencias Básicas" licences="150" active="145" leftover="5")
