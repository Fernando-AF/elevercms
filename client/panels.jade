template(name="group_information")
    .ib_header
        .ibh_title_group
            i.fa.fa-users
            h3 {{title}}
        .ibh_button_group
                h4 Assigned Groups
                .ibh_mark
                    h5 {{active}}
                i.fa.fa-angle-up#toggle
                i.fa.fa-info-circle
    .infoContent
        +group_overview(name="Física" query="")
        +group_overview(name="Química" query="")

